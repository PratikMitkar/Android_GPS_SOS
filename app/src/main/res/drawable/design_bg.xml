<!-- background_curved_gradient.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom shape to create curved background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color of bottom portion -->
        </shape>
    </item>
    <!-- Top shape with gradient -->
    <item android:bottom="200dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#338FFF"
                android:endColor="#4C3477"
                android:type="linear"
                android:angle="135" />
            <corners android:bottomLeftRadius="100dp" android:bottomRightRadius="100dp" /> <!-- Adjust radius to control curvature -->
        </shape>
    </item>
</layer-list>
